<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:longClickable="true"
    android:background="@drawable/background4"
    >

    <Button
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:id="@+id/B2"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:background = "@drawable/button_selector"
        android:textSize="60dp"
         />

    <Button
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:id="@+id/A2"
        android:layout_above="@+id/B2"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="16dp"
        android:background = "@drawable/button_selector"
        android:textSize="60dp"
         />

    <Button
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:id="@+id/B3"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/B2"
        android:layout_toEndOf="@+id/B2"
        android:layout_marginLeft="16dp"
        android:background = "@drawable/button_selector"
        android:textSize="60dp"
         />

    <Button
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:id="@+id/A3"
        android:layout_alignBottom="@+id/A2"
        android:layout_alignLeft="@+id/B3"
        android:layout_alignStart="@+id/B3"
        android:background = "@drawable/button_selector"
        android:textSize="60dp"
         />

    <Button
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:id="@+id/B1"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/B2"
        android:layout_toStartOf="@+id/B2"
        android:layout_marginRight="16dp"
        android:background = "@drawable/button_selector"
        android:textSize="60dp"
        />

    <Button
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:id="@+id/A1"
        android:layout_alignBottom="@+id/A2"
        android:layout_alignRight="@+id/B1"
        android:layout_alignEnd="@+id/B1"
        android:background = "@drawable/button_selector"
        android:textSize="60dp"
        />

    <Button
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:id="@+id/C2"
        android:layout_below="@+id/B2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:background = "@drawable/button_selector"
        android:textSize="60dp"
         />

    <Button
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:id="@+id/C1"
        android:layout_alignTop="@+id/C2"
        android:layout_alignRight="@+id/B1"
        android:layout_alignEnd="@+id/B1"
        android:background = "@drawable/button_selector"
        android:textSize="60dp"
        />

    <Button
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:id="@+id/C3"
        android:layout_alignTop="@+id/C2"
        android:layout_alignLeft="@+id/B3"
        android:layout_alignStart="@+id/B3"
        android:background = "@drawable/button_selector"
        android:textSize="60dp"
         />

    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="@string/New_Game"
        android:id="@+id/bNewGame"
        android:layout_marginTop="31dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="@color/bright_green"
        android:textSize="20sp"
        android:textStyle="normal|bold"
        android:textColor="#000000" />
</RelativeLayout>
